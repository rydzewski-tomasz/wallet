{
  "name": "wallet-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon ./src/index.ts",
    "start:prod": "",
    "testCoverage": "jest --collectCoverage",
    "lint": "npx prettier --check src/ && npx prettier --check test/",
    "lintFix": "npx prettier --write src/ && npx prettier --write test/",
    "setupTests": "docker compose -f docker-compose.test.yml up -d",
    "test": "npm run unitTests  && npm run integrationTests && npm run componentTests",
    "testsOnDocker": "TEST_ENV=docker npm run test",
    "unitTests": "jest unit",
    "integrationTests": "jest int",
    "componentTests": "jest comp",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Tomasz Rydzewski",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/koa": "2.13.5",
    "@types/koa-joi-router": "8.0.4",
    "@types/nodemon": "1.19.2",
    "@types/supertest": "2.0.12",
    "@types/uuid": "8.3.4",
    "bcryptjs": "2.4.3",
    "dayjs": "1.11.5",
    "knex": "2.3.0",
    "koa": "2.13.4",
    "koa-joi-router": "8.0.0",
    "nodemon": "2.0.20",
    "pg": "8.8.0",
    "supertest": "6.3.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.4",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@types/jest": "29.1.2",
    "husky": "8.0.1",
    "jest": "29.1.2",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "diagnostics": true
        }
      ]
    },
    "testMatch": [
      "**/test/**/*.+(unit.ts|int.ts|comp.ts)"
    ],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
